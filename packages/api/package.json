{
  "name": "@bkonkle/storyverse-api",
  "version": "1.0.0",
  "description": "The Storyverse api server",
  "repository": {
    "type": "git",
    "url": "git@github.com:bkonkle/storyverse.git"
  },
  "author": "Brandon Konkle <brandon@konkle.us> (http://konkle.us)",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build.watch": "tsc -w -p tsconfig.build.json",
    "check.types": "cd ../../ && yarn check.types",
    "db.backup": "ts-node --transpile-only scripts/db/backup.ts",
    "db.create": "ts-node --transpile-only scripts/db/create.ts",
    "db.drop": "ts-node --transpile-only scripts/db/drop.ts",
    "db.functions": "ts-node --transpile-only scripts/db/functions.ts",
    "db.migrate": "yarn typeorm migration:run",
    "db.reset": "yarn db.drop && yarn db.create && yarn db.migrate",
    "db.restore": "ts-node --transpile-only scripts/db/restore.ts",
    "db.tunnel": "ts-node --transpile-only scripts/db/tunnel.ts",
    "db.revert": "yarn typeorm migration:revert",
    "ecr.build": "DOCKER_BUILDKIT=1 docker build -t storyverse-api .",
    "ecr.login": "eval $(aws ecr get-login --no-include-email --region us-west-2)",
    "ecr.push": "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/storyverse-api:${TAG:-latest}",
    "ecr.tag": "docker tag storyverse-api ${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/storyverse-api:${TAG:-latest}",
    "ecr.upload": "yarn ecr.tag && yarn ecr.push",
    "generate.schema": "graphql-codegen",
    "lint": "yarn eslint 'src/**/*{.js,.ts}'",
    "lint.fix": "yarn lint --fix",
    "start": "ts-node --transpile-only --files -r tsconfig-paths/register src/main.ts",
    "start.dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start.debug": "TS_NODE_FILES=true nodemon --config nodemon-debug.json",
    "start.prod": "node dist/main.js",
    "test": "NODE_ENV=test jest",
    "test.cov": "NODE_ENV=test jest --coverage",
    "test.int": "NODE_ENV=test jest -i -c ./jest.integration.config.js --forceExit",
    "test.watch": "yarn test --watch",
    "typeorm": "ts-node --transpile-only --files -r tsconfig-paths/register ../../node_modules/typeorm/cli.js --config src/db/config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/schedule": "^0.4.0",
    "@nestjs/typeorm": "^7.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "fp-ts": "^2.7.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "ts-parse-database-url": "^1.0.3",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.4.2",
    "@types/cron": "^1.7.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/recursive-readdir": "^2.2.0",
    "@types/supertest": "^2.0.10",
    "@types/yargs": "^15.0.5",
    "concurrently": "^5.2.0",
    "faker": "^4.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "recursive-readdir": "^2.2.2",
    "supertest": "^4.0.2",
    "tsconfig-paths": "^3.9.0"
  }
}
