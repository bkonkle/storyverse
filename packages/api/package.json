{
  "name": "@bkonkle/storyverse-api",
  "version": "1.0.0",
  "description": "The Storyverse api server",
  "repository": {
    "type": "git",
    "url": "git@github.com:bkonkle/storyverse.git"
  },
  "author": "Brandon Konkle <brandon@konkle.us> (http://konkle.us)",
  "license": "MIT",
  "scripts": {
    "build": "tsc --incremental -p tsconfig.build.json",
    "build.watch": "tsc --watch --incremental -p tsconfig.build.json",
    "check.types": "tsc --pretty --noEmit",
    "db.backup": "ts-node --transpile-only src/scripts/db/backup.ts",
    "db.create": "ts-node --transpile-only src/scripts/db/create.ts",
    "db.drop": "ts-node --transpile-only src/scripts/db/drop.ts",
    "db.functions": "ts-node --transpile-only src/scripts/db/functions.ts",
    "db.migrate": "yarn typeorm migration:run",
    "db.reset": "yarn db.drop && yarn db.create && yarn db.migrate",
    "db.restore": "ts-node --transpile-only src/scripts/db/restore.ts",
    "db.tunnel": "ts-node --transpile-only src/scripts/db/tunnel.ts",
    "db.revert": "yarn typeorm migration:revert",
    "generate.schema": "graphql-codegen",
    "lint": "yarn eslint 'src/**/*{.js,.ts}'",
    "lint.fix": "yarn lint --fix",
    "start": "ts-node --transpile-only --files src/Server.ts",
    "start.dev": "concurrently --handle-input \"wait-on dist/Server.js && nodemon\" \"tsc --watch --incremental -p tsconfig.build.json\" ",
    "start.debug": "TS_NODE_FILES=true nodemon --config nodemon-debug.json",
    "start.prod": "node dist/Server.js",
    "test": "NODE_ENV=test jest",
    "test.cov": "NODE_ENV=test jest --coverage",
    "test.int": "NODE_ENV=test jest -i -c ./jest.integration.config.js --forceExit",
    "test.watch": "yarn test --watch",
    "typeorm": "ts-node --transpile-only --files node_modules/.bin/typeorm --config src/config/Database.ts"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "cultivar": "1.0.0-alpha.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fp-ts": "^2.7.1",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.3.0",
    "ts-parse-database-url": "^1.0.3",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/recursive-readdir": "^2.2.0",
    "@types/supertest": "^2.0.10",
    "@types/yargs": "^15.0.5",
    "concurrently": "^5.2.0",
    "faker": "^4.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "recursive-readdir": "^2.2.2",
    "supertest": "^4.0.2",
    "wait-on": "^5.1.0"
  }
}
