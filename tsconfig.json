{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2015",
    "lib": ["dom", "esnext.asynciterable", "es2015", "es2016", "es2017.object"],
    "paths": {
      "*": ["*", "src/bindings/*"]
    }
  },
  "include": ["src", "packages/*/src", "packages/*/migrations"],
  "exclude": ["node_modules", "packages/*/node_modules", "packages/*/build"]
}
