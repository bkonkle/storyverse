{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "paths": {
      "@storyverse/graphql": ["libs/graphql/src/index.ts"],
      "@storyverse/graphql/*": ["libs/graphql/src/*"],
      "@storyverse/components": ["libs/components/src/index.ts"],
      "@storyverse/components/*": ["libs/components/src/*"],
      "@storyverse/client/utils": ["libs/client/utils/src/index.ts"],
      "@storyverse/client/utils/*": ["libs/client/utils/src/*"],
      "@storyverse/server/utils": ["libs/server/utils/src/index.ts"],
      "@storyverse/server/utils/*": ["libs/server/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
