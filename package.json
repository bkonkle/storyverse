{
  "name": "@bkonkle/storyverse",
  "version": "1.0.0",
  "description": "The Storyverse API server",
  "repository": {
    "type": "git",
    "url": "git@github.com:bkonkle/storyverse.git"
  },
  "author": "Brandon Konkle <brandon@konkle.us> (http://konkle.us)",
  "license": "MIT",
  "scripts": {
    "build": "tsc --pretty --skipLibCheck",
    "check.types": "yarn build --noEmit",
    "db.backup": "ts-node --transpile-only scripts/backup-db.ts",
    "db.backup.dev": "ENVIRONMENT=dev yarn db.backup",
    "db.functions": "ts-node --transpile-only scripts/db-functions.ts",
    "db.migrate": "knex migrate:latest && yarn db.functions",
    "db.migrate.dev": "dotenv -- sh -c 'DATABASE_URL=$DEV_DATABASE_URL yarn db.migrate'",
    "db.restore": "ts-node --transpile-only scripts/restore-db.ts",
    "db.restore.dev": "ENVIRONMENT=dev yarn db.restore",
    "db.reset": "dropdb --if-exists storyverse && createdb storyverse -O storyverse_root && yarn db.migrate",
    "db.shell": "PGPASSWORD=password psql -h localhost -U storyverse_root storyverse",
    "db.sync.dev": "yarn db.backup.dev dev.postgres.bak && yarn db.restore dev.postgres.bak && yarn db.migrate",
    "db.tunnel": "ts-node --transpile-only scripts/tunnel-db.ts",
    "db.tunnel.dev": "ENVIRONMENT=dev yarn db.tunnel",
    "dev": "yarn dev.watch",
    "dev.run": "NODE_ENV=development ts-node --transpile-only src/Server.ts",
    "dev.debug": "DEBUG=storyverse-api:*,graphile-build-pg:* yarn dev.watch",
    "dev.watch": "nodemon --exec yarn dev.run",
    "ecr.login": "eval $(aws ecr get-login --no-include-email --region us-west-2)",
    "ecr.build": "DOCKER_BUILDKIT=1 docker build -t storyverse-api .",
    "ecr.tag": "docker tag storyverse-api ${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/storyverse-api:${TAG:-latest}",
    "ecr.push": "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/storyverse-api:${TAG:-latest}",
    "ecr.upload": "yarn ecr.tag && yarn ecr.push",
    "format": "prettier --write",
    "format.all": "yarn format \"src/**/*.{js,jsx,ts,tsx}\"",
    "generate.schema": "graphql-codegen",
    "start": "node build/src/Server.js",
    "test": "NODE_ENV=test jest",
    "test.watch": "NODE_ENV=test jest --watch",
    "test.reset.db": "ts-node --transpile-only scripts/reset-test-db.ts",
    "test.integration": "NODE_ENV=test jest --config=jest.integration.js --forceExit",
    "test.integration.server": "NODE_ENV=development yarn test.reset.db && ts-node --transpile-only scripts/run-test-server.ts"
  },
  "dependencies": {
    "@graft/server": "^3.3.0",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.1.0",
    "graphile-utils": "^4.4.5",
    "graphql": "14.5.8",
    "graphql-playground-middleware-koa": "^1.6.12",
    "knex": "0.19.5",
    "koa": "^2.10.0",
    "koa-bodyparser": "^4.2.1",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0",
    "moment": "^2.24.0",
    "parse-database-url": "^0.3.0",
    "pg": "^7.12.1",
    "postgraphile": "^4.4.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.8.1",
    "@graphql-codegen/cli": "^1.8.1",
    "@graphql-codegen/typescript": "^1.8.1",
    "@graphql-codegen/typescript-operations": "^1.8.1",
    "@graphql-codegen/typescript-urql": "^1.8.1",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.19",
    "@types/koa": "2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.11.0",
    "@types/recursive-readdir": "^2.2.0",
    "dotenv-cli": "^3.0.0",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "recursive-readdir": "^2.2.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "3.6.4"
  },
  "resolutions": {
    "graphql": "14.5.8"
  }
}
