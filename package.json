{
  "name": "@bkonkle/storyverse",
  "version": "1.0.0",
  "description": "The Storyverse monorepo package",
  "repository": {
    "type": "git",
    "url": "git@github.com:bkonkle/storyverse.git"
  },
  "author": "Brandon Konkle <brandon@konkle.us> (http://konkle.us)",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@graphql-codegen",
      "**/@graphql-codegen/**",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-scripts",
      "**/react-native-scripts/**",
      "**/expo",
      "**/expo/**",
      "**/jest-expo",
      "**/jest-expo/**"
    ]
  },
  "scripts": {
    "build": "tsc --pretty --skipLibCheck",
    "check.types": "yarn build --noEmit",
    "format": "prettier --write",
    "format.all": "yarn format \"{src,packages}/**/*.{js,jsx,ts,tsx}\"",
    "test": "NODE_ENV=test jest",
    "test.watch": "NODE_ENV=test jest --watch"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.14",
    "@types/ramda": "^0.26.36",
    "@types/react": "^16.9.13",
    "@types/react-native": "^0.60.23",
    "@types/recursive-readdir": "^2.2.0",
    "dotenv-cli": "^3.1.0",
    "graphql-tag": "^2.10.1",
    "husky": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.0-1",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "recursive-readdir": "^2.2.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.2",
    "typescript": "3.7.2"
  },
  "resolutions": {
    "react": "16.8.3",
    "mem": "^4.0.0"
  }
}
