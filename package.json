{
  "name": "@bkonkle/storyverse",
  "version": "1.0.0",
  "description": "The Storyverse monorepo package",
  "repository": {
    "type": "git",
    "url": "git@github.com:bkonkle/storyverse.git"
  },
  "author": "Brandon Konkle <brandon@konkle.us> (http://konkle.us)",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "scripts": {
    "build": "tsc --pretty --skipLibCheck",
    "check.types": "yarn build --noEmit",
    "format": "prettier --write",
    "format.all": "yarn format \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.8.2",
    "@graphql-codegen/cli": "^1.8.2",
    "@graphql-codegen/typescript": "^1.8.2",
    "@graphql-codegen/typescript-operations": "^1.8.2",
    "@graphql-codegen/typescript-urql": "^1.8.2",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.19",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.11.6",
    "@types/recursive-readdir": "^2.2.0",
    "dotenv-cli": "^3.0.0",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "recursive-readdir": "^2.2.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "3.6.4"
  },
  "resolutions": {
    "graphql": "14.5.8",
    "mem": "^4.0.0"
  }
